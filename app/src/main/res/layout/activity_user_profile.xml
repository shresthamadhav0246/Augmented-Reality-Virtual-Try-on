<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_icon"
        android:layout_centerHorizontal="true"
        android:text="Alex Smith"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:text="smith@gmail.com"
        android:textSize="16sp"
   />

    <LinearLayout
        android:id="@+id/menu_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_address"
        android:background="#dcdcdc"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:text="Settings"
            android:drawablePadding="8dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/products_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
            android:text="Products"
            android:drawablePadding="8dp"
            android:padding="12dp"/>



        <TextView
            android:id="@+id/manage_profile_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:text="Manage Profile"
            android:drawablePadding="8dp"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/logout_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_logout_24"
            android:text="Logout"
            android:drawablePadding="8dp"
            android:padding="12dp"/>
    </LinearLayout>
</RelativeLayout>
