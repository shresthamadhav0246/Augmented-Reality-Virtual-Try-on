<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/sunglasses_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image" /> <!-- Placeholder image -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sunglasses_image">

            <!-- Content Layout for Text Views -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sunglasses_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunglasses Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sunglasses_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$150.00"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                     />
            </LinearLayout>

            <!-- Button Layout -->
            <Button
                android:id="@+id/btnVirtualTryOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try On"
               android:layout_margin="4dp"
                android:background="@drawable/button_background"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
